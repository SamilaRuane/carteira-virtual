<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true">

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degr_background"
    tools:activity="br.com.samilaruane.carteiravirtual.ui.transaction.TransactionActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ic_transaction"
            tools:layout_editor_absoluteX="142dp"
            tools:layout_editor_absoluteY="32dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_label_to_operation_type"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="159dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <Spinner
            android:id="@+id/spinner_transaction_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="8dp"
            android:layout_margin="10dp"
            tools:layout_editor_absoluteY="185dp"
            android:background="@drawable/textbox_background"/>
        <TextView
            android:id="@+id/txt_destination_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coin_hint"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="287dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <Spinner
            android:id="@+id/spinner_destination_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="316dp"
            android:background="@drawable/textbox_background"/>
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coin_hint"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="222dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <Spinner
            android:id="@+id/spinner_source_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="246dp"
            android:background="@drawable/textbox_background"/>
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_label_to_amount"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="353dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/edt_transaction_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:padding="@dimen/box_padding"
            android:layout_margin="10dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="372dp"
            android:background="@drawable/textbox_background"/>

        <Button
            android:id="@+id/btn_save_transaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/btn_confirm"
            android:background="@color/colorPrimary"
            style="@android:style/Widget.Material.Button"
            android:textColor="@color/baseColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>

    <include layout="@layout/layout_progress" />

</android.support.constraint.ConstraintLayout>

</ScrollView>
