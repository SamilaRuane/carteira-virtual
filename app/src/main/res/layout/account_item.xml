<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/txt_acc_list_coin_initials"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BTC"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/txt_acc_list_acc_balance"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_acc_list_coin_symbol"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginEnd="7dp"
        app:layout_constraintEnd_toStartOf="@+id/txt_acc_list_acc_balance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_attach_money_black_24dp" />

    <TextView
        android:id="@+id/txt_acc_list_acc_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="222dp"
        android:text="212.98989"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_acc_list_coin_symbol"
        app:layout_constraintTop_toBottomOf="@+id/txt_acc_list_coin_initials" />
</android.support.constraint.ConstraintLayout>